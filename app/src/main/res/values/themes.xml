<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GreenPass" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue_700</item>
        <item name="colorPrimaryDark">@color/blue_800</item>
        <item name="colorPrimaryVariant">@color/blue_800</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/orange</item>
        <item name="colorOnSurface">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/orange_500</item>
        <item name="colorOnSecondary">?attr/colorPrimaryVariant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GreenPass.DarkActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GreenPass.DarkActionBarSameLightDark">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorControlNormal">@color/white</item>

    </style>

    <style name="Theme.GreenPass.DarkActionBar.BackButton" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="Theme.GreenPass.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.GreenPass.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.GreenPass.LoginRegister" parent="Theme.GreenPass">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/blue_700</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorButtonNormal">@color/orange</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
    </style>

    <style name="Theme.GreenPass.Profile" parent="Theme.GreenPass">
        <item name="android:windowBackground">@color/blue_800</item>
        <item name="colorButtonNormal">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="Theme.GreenPass.Dialog" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorPrimary">@color/black</item>
    </style>

    <style name="ThemeOverlay.GreenPass.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_grey</item>
        <item name="fullscreenTextColor">@color/black</item>
        <item name="colorSecondaryVariant">@color/grey_50_percent</item>
    </style>

    <style name="Theme.GreenPass.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.GreenPass.Splash" parent="Theme.GreenPass.NoActionBar">
        <!-- <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item> -->
    </style>

    <style name="Theme.GreenPass.Intro" parent="Theme.Intro" />
</resources>